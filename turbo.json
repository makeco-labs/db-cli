{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"clean": {
			"cache": false
		},
		"lint": {
			"outputs": []
		},
		"format": {
			"outputs": []
		},
		"typecheck": {
			"outputs": []
		},
    "ci": {
      "dependsOn": ["lint", "typecheck", "build", "test"]
    },
		"test": {
			"outputs": [],
			"cache": false
		},
		"db": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
